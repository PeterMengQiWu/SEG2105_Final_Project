<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.uottawa.leyaoli.seg2105_final_project.Tab1">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/Add"
                        android:layout_width="50dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:text="+"
                        tools:text="+" />

                    <Button
                        android:id="@+id/selectType"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:text="type"
                        tools:text="type" />

                    <EditText
                        android:id="@+id/addName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        tools:text="new Content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/MetirialT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/Metarial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Metarial"
                        tools:text="Metarial" />

                    <GridLayout
                        android:id="@+id/Metariallist"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:columnCount="2">

                        <CheckBox
                            android:id="@+id/checkBoxM1"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM3"
                            android:layout_width="189dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM5"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM7"
                            android:layout_width="189dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxM8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/grocericesT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/groceroies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Groceroies" />

                    <GridLayout
                        android:id="@+id/groceriesList"
                        android:layout_width="match_parent"
                        android:layout_height="204dp"
                        android:columnCount="2">

                        <CheckBox
                            android:id="@+id/checkBoxG1"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG3"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG5"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG7"
                            android:layout_width="191dp"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/checkBoxG8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </GridLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
